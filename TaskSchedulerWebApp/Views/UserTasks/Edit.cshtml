@model TaskSchedulerWebApp.Models.UserTask

@{
    Layout = "_Layout";
}

<h3>Изменить задачу</h3>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TaskId" />
            <div class="form-group">
                <label asp-for="Name" class="control-label">Название задачи</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label">Описание задачи</label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TaskState" class="control-label">Состояние выполнения</label>
                <select asp-for="TaskState.Name" asp-items="@ViewBag.taskStates" class="form-control"></select>
                <span asp-validation-for="TaskState" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TaskLevel" class="control-label">Приоритет задачи</label>
                <select asp-for="TaskLevel.Name" asp-items="@ViewBag.taskLevels" class="form-control"></select>
                <span asp-validation-for="TaskLevel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Date" class="control-label">Дата выполнения</label>
                <input asp-for="Date" type="date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Time" class="control-label">Время</label>
                <input asp-for="Time" type="time" class="form-control" />
                <span asp-validation-for="Time" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<form asp-action="Index">
    <button>К списку задач</button>
</form>